<Window x:Class="Gui.UploadExe.Views.AppView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui.UploadExe.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:cal="http://caliburnmicro.com"
        mc:Ignorable="d"
        Title="AppView" SizeToContent="WidthAndHeight" Background="LightBlue">
    <Grid MinHeight="300" MinWidth="300" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="ColorModel"/>
        <Rectangle Grid.Column="1" Width="100" Height="100" Fill="{Binding Color}" />
    </Grid>
</Window>
