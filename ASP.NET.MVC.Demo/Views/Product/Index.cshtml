@{ 
    Layout = null;
}
@model ASP.NET.MVC.Demo.Models.Product
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h2>名称:@Model.Name</h2>
<p>@DateTime.Now.ToShortTimeString()</p>
@(DateTime.Now.Hour > 22 ? "该岁了" : "加油，继续学习")
@if (Model.Price > 5)
{
    string test = "买不起！";
    @:
    <p>@Model.Name <b>太贵了！</b> @@test </p>
}

